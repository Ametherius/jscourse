{
  "editor.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "variable": {
        "foreground": "#FFFFFF",
        "fontStyle": "italic"
      },
      "parameter": {
        "foreground": "#ffffff",
        "fontStyle": "italic"
      },
      "class": {
        "foreground": "#FFFFFF",
        "fontStyle": "italic"
      },
      "method": {
        "foreground": "#007cd4"
      },
      "method.declaration": {
        "foreground": "#a300e9",
        "fontStyle": "italic"
      },
      "function": {
        "foreground": "#a300e9"
      },
      "function.declaration": {
        "foreground": "#ffffff",
        "fontStyle": "italic"
      }
    }
  },
  "workbench.colorCustomizations": {
    "editor.background": "#000000",
    "editor.foreground": "#f5f5f7",

    "editorCursor.foreground": "#ffffff",
    "editor.selectionBackground": "#2a1144",

    "editorLineNumber.foreground": "#ffffff",
    "editorLineNumber.activeForeground": "#a300e9",

    "sideBar.background": "#23002f",
    "sideBar.foreground": "#FFFFFF",

    "activityBar.background": "#23002f",
    "activityBar.foreground": "#FFFFFF",

    "statusBar.background": "#23002f",
    "activityBarTop.background": "#23002f",

    "tab.activeBorder": "#7904a0",
    "tab.inactiveBackground": "#000000",
    "tab.inactiveForeground": "#FFFFFF",
    "tab.activeBackground": "#23002f",
    "tab.activeForeground": "#FFFFFF"
  },

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["keyword", "storage.type", "storage.modifier"],
        "settings": {
          "foreground": "#a300e9",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "punctuation.section",
        "settings": {
          "foreground": "#8000b7"
        }
      },
      {
        "scope": "string",
        "settings": {
          "foreground": "#FFFFFF"
        }
      }
    ]
  }
}
